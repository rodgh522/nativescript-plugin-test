{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "esnext",
    "types": [],
    "paths": {
      "@src/*": [
        "src/*.web",
        "src/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/app/global/*.ts",
    "src/app/global/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.tns.ts"
  ]
}
